<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>
</head>
<body>
<%= render 'faculty/sidenav' %>
<header>
  <nav class="top-nav" style="height: 100px; border-bottom: 1px solid #dbdbdb;">
    <div class="container">
      <div class="nav-wrapper">
        <div class="row">
          <div class="col s12 m10 offset-m1">
            <h1 class="header" style="color: #333; font-size: 2rem;">Lectures</h1>
            <a href="#" data-target="mobile-demo" style="display: none; color:#333;" class="sidenav-trigger right top-nav hide-on-large-only"><i class="fas fa-bars"></i></a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container">
    <br>
    <div class="row">
      <div class="col s12 m10 offset-m1">
        <p id="notice"><%= notice %></p>
        <table>
          <thead>
          <tr>
            <th>Date of Lecture</th>
            <th>Course Code</th>
            <th>QR Key</th>
            <th colspan="3">Action</th>
          </tr>
          </thead>

          <tbody>
          <% @lectures.reverse.each do |lecture| %>
              <tr>
                <td><%= lecture.dateOfLecture %></td>
                <td><%= lecture.cc %></td>
                <td><%= lecture.qrkey %></td>
                <td><%= link_to 'Show', lecture %></td>
                <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%= render 'layouts/scripts' %>
<%= render 'layouts/scannerScript' %>

</body>
</html>